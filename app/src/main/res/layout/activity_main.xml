<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
    android:id="@+id/txtShow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="小計算機:"
        android:textsize="24sp"/>

    <button
        android:id="@+id/btnOne"
        android:layout_width="90dp"
        android:layout_hight="70dp"
        android:layout_alignBottom="@+id/btnTwo"
        android:layout_tobeLeftOf="@+id/btnTwo"
        android:layout_marginRight="10dp"
        android:text="1"
        android:textSize="24sp"/>
    <button
        android:id="@+id/btnTwo"
        android:layout_width="90dp"
        android:layout_hight="70dp"
        android:layout_centerHorizontal="true"
        android:layout_bwlow="@+id/btnFive"
        android:layout_marginTop="20dp"
        android:text="2"
        android:textSize="24sp"/>
    <button
        android:id="@+id/btnThree"
        android:layout_width="90dp"
        android:layout_hight="70dp"
        android:layout_alignBottom="@+id/btnTwo"
        android:layout_toLeftOf="@+id/btnTwo"
        android:layout_marginRight="10dp"
        android:text="3"
        android:textSize="24sp"/>
    <button
        android:id="@+id/btnFour"
        android:layout_width="90dp"
        android:layout_hight="70dp"
        android:layout_alignBottom="@+id/btnFive"
        android:layout_toLeftOf="@+id/btnFive"
        android:layout_marginRight="10dp"
        android:text="4"
        android:textSize="24sp"/>
    <button
        android:id="@+id/btnFive"
        android:layout_width="90dp"
        android:layout_hight="70dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/btnEight"
        android:layout_marginRight="10dp"
        android:text="5"
        android:textSize="24sp"/>
    <button
        android:id="@+id/btnSix"
        android:layout_width="90dp"
        android:layout_hight="70dp"
        android:layout_alignBottom="@+id/btnFive"
        android:layout_toRightOf="@+id/btnFive"
        android:layout_marginRight="10dp"
        android:text="6"
        android:textSize="24sp"/>

    <button
        android:id="@+id/btnSeven"
        android:layout_width="90dp"
        android:layout_hight="70dp"
        android:layout_alignBottom="@+id/btnEight"
        android:layout_toRightOf="@+id/btnEight"
        android:layout_marginRight="10dp"
        android:text="7"
        android:textSize="24sp"/>

    <button
    android:id="@+id/btnEight"
    android:layout_width="90dp"
    android:layout_hight="70dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/txtShow"
    android:layout_marginRight="10dp"
    android:text="8"
    android:textSize="24sp"/>

    <button
    android:id="@+id/btnNine"
    android:layout_width="90dp"
    android:layout_hight="70dp"
    android:layout_alignBottom="@+id/btnEight"
    android:layout_toRightOf="@+id/btnEight"
    android:layout_marginRight="10dp"
    android:text="9"
    android:textSize="24sp"/>

    <button
        android:id="@+id/btnAdd"
        android:layout_width="90dp"
        android:layout_hight="70dp"
        android:layout_alignbelow="@+id/btnZero"
        android:layout_marginRight="10dp"
        android:text="+"
        android:textSize="24sp"/>
    <button
        android:id="@+id/btnZero"
        android:layout_width="90dp"
        android:layout_hight="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnTwo"
        android:layout_marginTop="10dp"
        android:text="+"
        android:textSize="24sp"/>

    <button
        android:id="@+id/btnEqil"
        android:layout_width="90dp"
        android:layout_hight="70dp"
        android:layout_alignBottom="@+id/btnZero"
        android:layout_toRightOf="@+id/btnZero"
        android:layout_marginRight="10dp"
        android:text="="
        android:textSize="24sp"/>


</android.support.constraint.ConstraintLayout>